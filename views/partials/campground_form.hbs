<div class="row justify-content-center mt-2">
    <div class="col-md-12 text-center">
        <h1>{{title}}</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="{{action}}" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name" value="{{campground.name}}">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url"
                       value="{{campground.image}}">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description">{{campground.description}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block btn-default" type="submit">Submit!</button>
            </div>
        </form>
    </div>
</div>