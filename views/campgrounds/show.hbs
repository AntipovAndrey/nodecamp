<div class="container pt-3">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="{{campground.image}}">
                <div class="card-body mb-2">
                    <div class="card-title">
                        <h5 class="d-inline-block">{{campground.name}}</h5>
                        <h6 class="float-right text-muted d-inline-block">$9.00/night</h6>
                    </div>
                    <p class="card-text">{{campground.description}}</p>
                </div>
            </div>
            <div class="text-right my-2">
                <a class="btn btn-success" href="{{campground._id}}/comments/new">add comment</a>
            </div>
            {{#each campground.comments}}
                <div class="card card-body bg-light mt-2">
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="mb-0">{{author}}</h5>
                            <h6 class="text-muted">5 days ago</h6>
                            <hr>
                            <p class="mb-0">{{text}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

